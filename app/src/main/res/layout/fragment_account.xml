<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/groupbaocao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Margin_padding5"
            android:layout_marginTop="@dimen/Margin_padding5"
            android:layout_marginRight="@dimen/Margin_padding5"
            android:layout_marginBottom="@dimen/Margin_padding5"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/Margin_padding10">

                <LinearLayout
                    android:layout_marginBottom="@dimen/Margin_padding5"
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Báo Cáo"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize18"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding5"
                    android:layout_below="@+id/top"
                    android:background="@drawable/backgroud_edt"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/adassa"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding30"
                    android:layout_below="@+id/top"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:layout_marginTop="@dimen/Margin_padding10">

                    <ImageView
                        android:id="@+id/icon_l"
                        android:layout_width="@dimen/width_icon"
                        android:layout_height="@dimen/heith_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:background="@drawable/salary" />

                    <TextView
                        android:id="@+id/salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icon_l"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Bảng Lương"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize16"
                        tools:ignore="RtlCompat"></TextView>

                    <ImageView
                        android:layout_width="@dimen/Margin_padding15"
                        android:layout_height="@dimen/Margin_padding15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding5"
                        android:background="@drawable/right" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/group_nc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding30"
                    android:layout_below="@+id/adassa"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:layout_marginTop="@dimen/Margin_padding10">

                    <ImageView
                        android:id="@+id/icon_l1"
                        android:layout_width="@dimen/width_icon"
                        android:layout_height="@dimen/heith_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:background="@drawable/calendar_c" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icon_l1"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Ngày công"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize16"
                        tools:ignore="RtlCompat"></TextView>

                    <ImageView
                        android:layout_width="@dimen/Margin_padding15"
                        android:layout_height="@dimen/Margin_padding15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding5"
                        android:background="@drawable/right" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/group_np"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding30"
                    android:layout_below="@+id/group_nc"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:layout_marginTop="@dimen/Margin_padding10">

                    <ImageView
                        android:id="@+id/icon_l2"
                        android:layout_width="@dimen/width_icon"
                        android:layout_height="@dimen/heith_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:background="@drawable/calendar_c" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icon_l2"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Ngày nghỉ phép"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize16"
                        tools:ignore="RtlCompat"></TextView>

                    <ImageView
                        android:layout_width="@dimen/Margin_padding15"
                        android:layout_height="@dimen/Margin_padding15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding5"
                        android:background="@drawable/right" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/group_nkp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding30"
                    android:layout_below="@+id/group_np"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:layout_marginTop="@dimen/Margin_padding10">

                    <ImageView
                        android:id="@+id/icon_l3"
                        android:layout_width="@dimen/width_icon"
                        android:layout_height="@dimen/heith_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:background="@drawable/calendar_kp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icon_l3"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Ngày nghỉ không phép"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize16"
                        tools:ignore="RtlCompat"></TextView>

                    <ImageView
                        android:layout_width="@dimen/Margin_padding15"
                        android:layout_height="@dimen/Margin_padding15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding5"
                        android:background="@drawable/right" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/groupTienich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupbaocao"
            android:layout_marginLeft="@dimen/Margin_padding5"
            android:layout_marginTop="@dimen/Margin_padding5"
            android:layout_marginRight="@dimen/Margin_padding5"
            android:layout_marginBottom="@dimen/Margin_padding5"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/Margin_padding10">

                <LinearLayout
                    android:layout_marginBottom="@dimen/Margin_padding5"
                    android:id="@+id/top2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Tiện ích"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize18"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding5"
                    android:layout_below="@+id/top2"
                    android:background="@drawable/backgroud_edt"></LinearLayout>
                <RelativeLayout
                    android:id="@+id/imformationuser"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding30"
                    android:layout_below="@+id/top2"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:layout_marginTop="@dimen/Margin_padding10">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="@dimen/width_icon"
                        android:layout_height="@dimen/heith_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:background="@drawable/user_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icon3"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Thông tin cá nhân"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize16"
                        tools:ignore="RtlCompat"></TextView>

                    <ImageView
                        android:layout_width="@dimen/Margin_padding15"
                        android:layout_height="@dimen/Margin_padding15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding5"
                        android:background="@drawable/right" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/changepassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding30"
                    android:layout_below="@+id/imformationuser"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:layout_marginTop="@dimen/Margin_padding10">

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="@dimen/width_icon"
                        android:layout_height="@dimen/heith_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:background="@drawable/chanepasss" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icon4"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Thay Đổi Mật Khẩu"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize16"
                        tools:ignore="RtlCompat"></TextView>

                    <ImageView
                        android:layout_width="@dimen/Margin_padding15"
                        android:layout_height="@dimen/Margin_padding15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding5"
                        android:background="@drawable/right" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/settingcofig"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Margin_padding30"
                    android:layout_below="@+id/changepassword"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:layout_marginTop="@dimen/Margin_padding10">
                    <ImageView
                        android:id="@+id/icon6"
                        android:layout_width="@dimen/width_icon"
                        android:layout_height="@dimen/heith_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:background="@drawable/configuration" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/icon6"
                        android:background="@drawable/textboxworking"
                        android:gravity="left"
                        android:text="Thay đổi cấu hình"
                        android:textColor="@color/mauden"
                        android:textSize="@dimen/TextSize16"
                        tools:ignore="RtlCompat"></TextView>

                    <ImageView
                        android:layout_width="@dimen/Margin_padding15"
                        android:layout_height="@dimen/Margin_padding15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/Margin_padding5"
                        android:background="@drawable/right" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/groupdx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTienich"
            android:layout_marginLeft="@dimen/Margin_padding5"
            android:layout_marginTop="@dimen/Margin_padding5"
            android:layout_marginRight="@dimen/Margin_padding5"
            android:layout_marginBottom="@dimen/Margin_padding10"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:padding="@dimen/Margin_padding10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/signoutuser"
                        android:layout_marginRight="@dimen/Margin_padding10"
                        android:layout_width="@dimen/heith_item_task"
                        android:layout_height="@dimen/heith_button_fragment_acount"
                        android:text="đăng xuất"
                        android:textColor="@color/mautrang"
                        android:textSize="@dimen/TextSize14"
                        android:background="@drawable/textboxaccount"/>
                    <Button
                        android:id="@+id/signout"
                        android:layout_width="@dimen/heith_item_task"
                        android:layout_height="@dimen/heith_button_fragment_acount"
                        android:text="thoát"
                        android:textColor="@color/mautrang"
                        android:textSize="@dimen/TextSize14"
                        android:background="@drawable/textboxaccount"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>