<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAF8"
    tools:context=".Activity.ChangePasswordActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/toplinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/Margin_padding45"
            android:background="#ffffff"
            tools:ignore="Orientation">

            <ImageView
                android:id="@+id/backchangepass"
                android:layout_width="@dimen/width_icon"
                android:layout_height="@dimen/heith_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/Margin_padding5"
                android:background="@drawable/back"
                android:padding="@dimen/Margin_padding5"></ImageView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Đổi mật khẩu"
                android:textColor="@color/menu"
                android:textSize="@dimen/TextSize17">

            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toplinear"
        android:layout_marginLeft="@dimen/Margin_padding5"
        android:layout_marginTop="@dimen/Margin_padding5"
        android:layout_marginRight="@dimen/Margin_padding5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/Margin_padding50">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiplo_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Margin_padding5"
                android:layout_marginRight="@dimen/Margin_padding5"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tip_edt_password"
                    android:paddingLeft="@dimen/Margin_padding5"
                    android:paddingRight="@dimen/Margin_padding5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mật khẩu cũ..."
                    android:inputType="textPassword"
                    android:textSize="@dimen/TextSize14" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiplo_passnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tiplo_pass"
                android:layout_marginLeft="@dimen/Margin_padding5"
                android:layout_marginRight="@dimen/Margin_padding5"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tip_edt_passwordnew"
                    android:paddingLeft="@dimen/Margin_padding5"
                    android:paddingRight="@dimen/Margin_padding5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mật khẩu mới"
                    android:inputType="textPassword"
                    android:textSize="@dimen/TextSize14" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiplo_passnewxn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tiplo_passnew"
                android:layout_marginLeft="@dimen/Margin_padding5"
                android:layout_marginRight="@dimen/Margin_padding5"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tip_edt_passwordnewxn"
                    android:paddingLeft="@dimen/Margin_padding5"
                    android:paddingRight="@dimen/Margin_padding5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Xác nhận mật khẩu mới"
                    android:inputType="textPassword"
                    android:textSize="@dimen/TextSize14" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tiplo_passnewxn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/Margin_padding20">

                <Button
                    android:id="@+id/aceptchangepasssword"
                    android:layout_width="@dimen/width_button_activity_changepassword"
                    android:layout_height="@dimen/heith_button_activity_changepassword"
                    android:background="@drawable/textboxaccount"
                    android:text="Xác Nhận"
                    android:textColor="@color/mautrang" />

                <Button
                    android:id="@+id/btnClose"
                    android:layout_width="@dimen/width_button_activity_changepassword"
                    android:layout_height="@dimen/heith_button_activity_changepassword"
                    android:layout_marginLeft="@dimen/Margin_padding10"
                    android:background="@drawable/textboxaccount"
                    android:text="Thoát"
                    android:textColor="@color/mautrang" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
