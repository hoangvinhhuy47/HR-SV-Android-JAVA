<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <layer-list>
        <item>
            <shape>
                <solid android:color="#07702A" />
                <corners android:radius="8dp" />
            </shape>
        </item>
        <item android:bottom="2px"
            android:top="2px"
            android:right="2px"
            android:left="2px"
            >
            <shape>
                <padding android:bottom="5dp" />
                <gradient android:angle="270" android:endColor="#FBFBFB" android:startColor="#F5F7FA" />
                <corners android:radius="8dp" />
                <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
            </shape>
        </item>
    </layer-list>
</item>

<item android:state_pressed="true">
    <layer-list>
        <item>
            <shape>
                <solid android:color="@color/menu" />
                <corners android:radius="8dp" />

            </shape>
        </item>
        <item android:bottom="2px"
            android:top="2px"
            android:right="2px"
            android:left="2px">
            <shape>
                <padding android:bottom="5dp" />
                <gradient android:angle="270" android:endColor="@color/menu" android:startColor="@color/menu" />
                <corners android:radius="8dp" />
                <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
            </shape>
        </item>
    </layer-list>
</item>
</selector>